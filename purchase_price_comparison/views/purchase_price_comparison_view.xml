<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Tree View -->
        <record id="view_purchase_price_comparison_tree" model="ir.ui.view">
            <field name="name">purchase.price.comparison.tree</field>
            <field name="model">purchase.price.comparison</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="create_date" readonly="1"/>
                    <!-- Add any additional fields here -->
                    <!-- You can also add buttons if needed -->
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_purchase_price_comparison_form" model="ir.ui.view">
            <field name="name">purchase.price.comparison.form</field>
            <field name="model">purchase.price.comparison</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group name="main">
                            <group name="left">
                                <field name="user_id"/>    
                            </group>
                            <group name="right">
                                <field name="create_date" readonly="1"/>
                            </group>
                        </group>

                        <notebook>
                        <page name="Lines" string="Lines">
                            <field name="price_line_ids">
                                <tree editable="bottom">
                                    <!-- <control>
                                        <create name="add_line_control" string="Agregar línea"/>
                                        <create name="add_section_control" string="Agregar una sección" />
                                        <create name="add_note_control" string="Agregar nota" />
                                    </control> -->
                                    <field name="name" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                        <footer>
                            <!-- You can add buttons if needed -->
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action for the Purchase Price Comparison -->
        <record id="action_purchase_price_comparison" model="ir.actions.act_window">
            <field name="name">Purchase Price Comparison</field>
            <field name="res_model">purchase.price.comparison</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- Menuitem for the Purchase Price Comparison -->
        <menuitem id="menu_purchase_price_comparison"
                  name="Purchase Price Comparison"
                  parent="purchase.menu_procurement_management"
                  action="action_purchase_price_comparison"
                  sequence="10"/>
    </data>
</odoo>
